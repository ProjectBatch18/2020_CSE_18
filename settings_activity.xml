<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


<EditTextPreference
    android:dialogMessage="Enter Threshold"
    android:dialogTitle="@string/app_name"
    android:key="threshold"
    android:summary="Enter Accelerometer threshold"
    android:title="Threshold" />
<EditTextPreference
    android:dialogMessage="Enter First Number"
    android:dialogTitle="@string/app_name"
    android:key="First Number"
    android:summary="call dialed automatically"
    android:title="First Number"
