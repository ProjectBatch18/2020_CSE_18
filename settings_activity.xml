    android:title="Second Number"
    android:visibility="visible" />

<EditTextPreference
    android:dialogMessage="Enter Third Number"
    android:dialogTitle="@string/app_name"
    android:key="third Number"
    android:summary="Enter Third Number"
    android:title="Third Number" />





